<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalCard">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPersonalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/layoutPhotoLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarPersonalCard"
        app:layout_constraintRight_toLeftOf="@id/layoutPersonLL"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/personalPhotoIV"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_android"
            tools:ignore="ContentDescription" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutPersonLL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/layoutPhotoLL"
        app:layout_constraintTop_toBottomOf="@id/toolbarPersonalCard"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textNameTV"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,TextFields" />

        <TextView
            android:id="@+id/secondNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textSecondNameTV"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:ignore="Autofill,TextFields" />

        <TextView
            android:id="@+id/dateOfBirthTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textDateOfBirthTV"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,TextFields" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>